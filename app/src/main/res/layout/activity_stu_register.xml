<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/bk1"
    tools:context=".Student.StuRegisterActivity">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/shadow">

        <EditText
            android:id="@+id/Register_StuNo"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="请输入学号"/>
        <EditText
            android:id="@+id/Register_StuName"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="请输入真实姓名"/>

        <EditText
            android:id="@+id/Register_StuPwd"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="请输入密码"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <EditText
                android:id="@+id/Register_StuTel"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="请输入手机号"/>
            <Button
                android:id="@+id/Register_StuVerify"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                style="@style/ButtonStyle"
                android:text="获取注册码"/>
        </LinearLayout>

        <EditText
            android:id="@+id/Register_StuCode"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="请输入获取的验证码"/>

        <Button
            android:id="@+id/Register_StuSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/ButtonStyle"
            android:text="注册"
            />


    </LinearLayout>



</LinearLayout>
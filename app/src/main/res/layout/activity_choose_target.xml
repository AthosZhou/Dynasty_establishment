<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Teacher.ChooseTargetActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="选择发布作业章节"
        android:textSize="20dp"
        android:gravity="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/text_size_30">
        <Button
            android:id="@+id/target_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="函数、极限、连续"
            style="@style/ButtonStyle"/>
        <Button
            android:id="@+id/target_2"
            style="@style/ButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="一元函数微分学"/>
        <Button
            style="@style/ButtonStyle"
            android:id="@+id/target_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="一元函数积分学"/>
        <Button
            style="@style/ButtonStyle"
            android:id="@+id/target_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="常微分方程"/>
        <Button
            style="@style/ButtonStyle"
            android:id="@+id/target_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="多元函数微分学"/>
        <Button
            style="@style/ButtonStyle"
            android:id="@+id/target_6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="多元函数积分学"/>
    </LinearLayout>


</LinearLayout>